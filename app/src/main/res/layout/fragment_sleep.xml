<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityEntry">

    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:text="@string/enter_date"/>

    <EditText
        android:id="@+id/date"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@id/dateLabel"
        android:inputType="datetime"/>

    <TextView
        android:id="@+id/timeLable"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:text="@string/time_slept"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_toEndOf="@id/date"/>

    <EditText
        android:id="@+id/volume"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/timeLable"
        android:inputType="time"
        android:textSize="12sp" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_below="@id/timeLable"
        android:text="@string/confirm"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_below="@id/timeLable"
        android:text="@string/reset"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>