<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeightWeight">

    <TextView
        android:id="@+id/weightHeightHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weight_height_header"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/weightTextBox"
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:layout_below="@id/weightHeightHeader"
        android:text="@string/enter_weight"
        android:textSize="18sp"
        android:layout_marginTop="36sp"
        android:layout_marginStart="12sp"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/heightTextBox"
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:layout_below="@id/weightTextBox"
        android:text="@string/enter_height"
        android:textSize="18sp"
        android:layout_marginTop="24sp"
        android:layout_marginStart="12sp"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heightTextBox"
        android:text="@string/confirm"
        android:textSize="18sp"
        android:layout_marginTop="24sp"
        android:layout_marginStart="12sp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/weightTextInput"
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:layout_below="@id/weightHeightHeader"
        android:hint="@string/enter_weight"
        android:textSize="18sp"
        android:layout_marginTop="36sp"
        android:layout_marginEnd="12sp"
        android:layout_alignParentEnd="true"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/heightTextInput"
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:layout_below="@id/weightTextInput"
        android:hint="@string/enter_height"
        android:textSize="18sp"
        android:layout_marginTop="24sp"
        android:layout_marginEnd="12sp"
        android:layout_alignParentEnd="true"
        android:inputType="numberDecimal"
        />

    <TextView
        android:id="@+id/weightHeightData"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/confirmButton"
        android:layout_marginStart="12sp"
        android:layout_marginTop="24sp"
        android:layout_marginEnd="12sp"
        android:layout_marginBottom="24sp"
        android:textSize="12sp"
        android:text=""/>
</RelativeLayout>